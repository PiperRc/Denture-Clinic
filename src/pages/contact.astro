---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>

  <section id="Contact">
    <h1>CONTACT</h1>
    <h2>Get in touch</h2>
    <p>
      See our contact information below and we will get back to you as soon as
      possible
    </p>

    <ul>
      <li>
        <i class="fa-sharp fa-solid fa-envelope"></i>
        <span></span>
      </li>

      <li>
        <i class="fa-solid fa-phone"></i>
        <span> (416) 616-3373</span>
      </li>

      <li>
        <i class="fa-sharp fa-solid fa-house"></i>
        <span> 570 Dundas Street West </span>
      </li>
    </ul>

    <h3>Or Fill out the form below:</h3>

    <form action="/submit" method="POST" netlify>
      <div>
        <!-- <input type="hidden" name="access_key" value="1559e601-1e30-4ee0-be81-9d97afc7434a"> -->

        <label for="name">Name (required)</label>
        <input type="text" id="name" required placeholder="Name" name="name" />

        <label for="email">Email (required)</label>
        <input
          type="text"
          id="email"
          required
          placeholder="Email"
          name="email"
        />

        <label for="message">Message (required)</label>
        <textarea
          class="message"
          name="message"
          id=""
          cols="30"
          rows="10"
          required
          placeholder="Message*"></textarea>

        <button class="button">SUBMIT</button>
      </div>
    </form>

    <!-- google map -->

    <div class="map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.787800314554!2d-79.40279668955402!3d43.6525830709816!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b34c2e2d8f7b3%3A0x6eb4789d45e68686!2s570%20Dundas%20St%20W%2C%20Toronto%2C%20ON%20M5T%201H5!5e0!3m2!1sen!2sca!4v1711154824667!5m2!1sen!2sca"
        width="400"
        height="300"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </section>
</MainLayout>